---
import Image from "astro/components/Image.astro";

interface Props {
  src: string;
  alt: string;
  width: number;
  sizes: string;
}

const { src, alt, width, sizes } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  widths={[240, 540, 720, 1000, 1600, 2000, width]}
  inferSize
  style="height: 100%"
/>

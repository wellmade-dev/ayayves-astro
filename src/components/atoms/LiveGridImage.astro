---
import ImageWellmade from "./ImageWellmade.astro";
import type { ImageData } from "../../types/strapi-attributes";

interface Props {
  image: ImageData;
}

const { image, ...attributes } = Astro.props as Props;
---

<ImageWellmade
  image={image}
  sizes="(min-width: 920px) 35vw, (min-width: 520px) 75vw, 60vw"
  {...attributes}
/>

<style lang="scss">
  img {
    z-index: 1;
    width: 100%;
    height: 100%;
    max-width: none;
    transform: scale(1.05);
  }
</style>

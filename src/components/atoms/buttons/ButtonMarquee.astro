---
import StarSVG from "../svgs/StarSVG.astro";

interface Props {
  firstString: string;
  secondString?: string;
  disabled?: boolean;
}

const { firstString, secondString, disabled } = Astro.props as Props;
---

<div class={"button--marquee" + (disabled ? " disabled" : "")}>
  <div class="marquee-split">
    <div class="marquee-block">
      <div>{firstString}</div>
      <div class="star-w">
        <StarSVG />
      </div>
      {
        secondString && (
          <>
            <div>{secondString}</div>
            <div class="star-w">
              <StarSVG />
            </div>
          </>
        )
      }
    </div>
  </div>
  <div class="edge-gradient-w">
    <div class="gradient"></div>
    <div class="gradient"></div>
  </div>
</div>

<style lang="scss">
  .button--marquee {
    color: var(--button-solid-text);
    background-color: var(--button-solid-bg);
    border: 1px solid var(--divider-partial);
    border-radius: var(--radius-circular);
    overflow: clip;
    display: flex;
    flex-direction: row;
    flex: none;
    font-size: 0.925rem;
    letter-spacing: 0.02em;
    position: relative;
    transition: 0.25s all;
    cursor: pointer;
    width: 100%;
    height: 100%;

    .marquee-split {
      display: flex;
      flex-direction: row;
      flex: none;

      .marquee-block {
        display: flex;
        flex-direction: row;
        flex: none;
        gap: 1rem;
        padding-left: 1rem;
        align-items: center;
      }
    }

    &.disabled {
      cursor: default;
      background-color: transparent;
      border: 1px solid var(--text-disabled);
      color: var(--text-disabled);

      .edge-gradient-w {
        display: none;
      }
    }

    .edge-gradient-w {
      pointer-events: none;
      display: flex;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      justify-content: space-between;
      z-index: 3;

      .gradient {
        background: linear-gradient(
          90deg,
          var(--button-solid-bg) 0%,
          var(--button-solid-bg-0) 100%
        );
        width: clamp(3rem, 20%, 4rem);

        &:nth-child(2) {
          transform: rotate(180deg);
        }
      }
    }
  }

  .star-w {
    display: flex;
    align-items: center;
    width: 0.875rem;
  }
</style>

<script>
  import { initMarquee } from "../../../scripts/animations";
  const marquee = document.querySelector(".button--marquee");
  initMarquee(marquee, 45);
</script>

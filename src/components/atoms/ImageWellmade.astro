---
import Image from "astro/components/Image.astro";
import type { ImageAttributes } from "../../types/strapi-attributes";

interface Props {
  image: ImageAttributes;
  sizes: string;
  class?: string;
  eagerLoading?: boolean;
}

const {
  image,
  sizes,
  class: className,
  eagerLoading,
  ...attributes
} = Astro.props as Props;
---

<Image
  src={image.src}
  alt={image.alt}
  widths={[240, 540, 720, 1000, 1600, 2000]}
  sizes={sizes}
  class={className ?? ""}
  loading={eagerLoading ? "eager" : "lazy"}
  inferSize
  {...attributes}
/>

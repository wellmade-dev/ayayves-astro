---
import Image from "astro/components/Image.astro";
import type { ImageAttributes } from "../../types/strapi-attributes";

interface Props {
  image: ImageAttributes;
  sizes: string;
  class?: string;
  eagerLoading?: boolean;
}

const {
  image,
  sizes,
  class: className,
  eagerLoading,
  ...attributes
} = Astro.props as Props;
---

<Image
  src={image.src}
  widths={[480, 800, 1200, 1600, image.width]}
  alt={image.alt}
  sizes={sizes}
  class={className ?? ""}
  loading={eagerLoading ? "eager" : "lazy"}
  inferSize
  {...attributes}
/>
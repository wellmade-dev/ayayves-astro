---
interface Props {
  label: string;
  ariaLabel: string;
  href: string;
  customProps: string;
}

const { label, ariaLabel, href } = Astro.props;
---

<a class="button--display" aria-label={ariaLabel} href={href}>
  <div class="star-w" hidden>
    <img src="../../../public/star.svg" />
  </div>
  <div>{label}</div>
  <div class="star-w">
    <img src="../../../public/star.svg" />
  </div>
</a>

<style lang="scss">
  .button--display {
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    border: 1px solid var(--button-glass-outline);
    color: 1px solid var(--text);
    background-color: var(--button-glass-bg);
    border-radius: var(--radius-circular);
    justify-content: center;
    align-items: center;
    padding: 0.15rem 0.15rem 0.15rem 1.5rem;
    transition: all 0.25s;
    display: flex;
    position: relative;
    overflow: clip;
    justify-self: start;
    transform: translate(0);
    letter-spacing: -0.02em;
    font-family: var(--editorial-old);
    font-size: 1.6rem;
    font-style: italic;
    font-weight: 200;
    line-height: 100%;
    cursor: pointer;
    @include noselect;

    &:hover {
      border-color: var(--button-solid-bg);
      background-color: var(--button-glass-hover);
    }

    [label] {
      padding-bottom: 0.05rem;
    }

    svg {
      width: 1rem;
    }

    .star-w {
      width: 3rem;
      aspect-ratio: 1 / 1;
      background-color: var(--button-solid-bg);
      color: var(--button-solid-text);
      border-radius: var(--radius-circular);
      flex: none;
      justify-content: center;
      align-items: center;
      display: flex;

      &[hidden] {
        position: absolute;
        top: auto;
        bottom: auto;
        left: -3rem;
        right: auto;
      }
    }
  }
</style>
